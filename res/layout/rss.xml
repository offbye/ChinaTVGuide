<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/home">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center"
		android:padding="3dp" android:textColor="#ffffffff" android:id="@+id/feedtitle"
		android:textSize="20sp" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center"
		android:textColor="#ff00ff00" android:id="@+id/feedpubdate" />
	<ListView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/itemlist" />
</LinearLayout>
