<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:spacing="5dp" android:layout_height="fill_parent" android:background="@drawable/home">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:id="@+id/TextView01"  android:visibility="gone"
			android:layout_width="fill_parent" android:paddingLeft="20dp"
			android:textSize="18sp" android:textColor="#ffff0a00" android:text=""
			android:layout_height="wrap_content" />
	</LinearLayout>

	<ListView android:id="@+id/ListView01" android:cacheColorHint="#00000000"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal">
	</ListView>

</LinearLayout>

